{
  "openapi": "3.0.0",
  "info": {
    "title": "Wildberries-like API",
    "version": "1.1.0",
    "description": "API маркетплейса: категории, бренды, товары с фильтрами и сортировками, пользователи, продавцы, отзывы, корзина и заказы."
  },
  "servers": [
    { "url": "http://localhost:3000", "description": "Local server" }
  ],
  "tags": [
    { "name": "Категории" },
    { "name": "Бренды" },
    { "name": "Продукты" },
    { "name": "Отзывы" },
    { "name": "Пользователи" },
    { "name": "Продавцы" },
    { "name": "Корзина" },
    { "name": "Заказы" }
  ],
  "paths": {
    "/categories": {
      "get": {
        "summary": "Получить все категории",
        "tags": ["Категории"],
        "responses": {
          "200": {
            "description": "Список категорий",
            "content": { "application/json": { "schema": { "type": "array", "items": { "$ref": "#/components/schemas/Category" } } } }
          }
        }
      },
      "post": {
        "summary": "Создать категорию",
        "tags": ["Категории"],
        "requestBody": {
          "required": true,
          "content": { "application/json": { "schema": { "$ref": "#/components/schemas/CategoryCreate" } } }
        },
        "responses": {
          "201": { "description": "Категория создана" },
          "400": { "description": "Неверные данные" }
        }
      }
    },
    "/categories/{id}": {
      "get": {
        "summary": "Получить категорию по ID",
        "tags": ["Категории"],
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }],
        "responses": {
          "200": { "description": "Категория", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Category" } } } },
          "404": { "description": "Категория не найдена" }
        }
      },
      "put": {
        "summary": "Обновить категорию",
        "tags": ["Категории"],
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }],
        "requestBody": {
          "required": true,
          "content": { "application/json": { "schema": { "$ref": "#/components/schemas/CategoryCreate" } } }
        },
        "responses": {
          "200": { "description": "Категория обновлена" },
          "404": { "description": "Категория не найдена" }
        }
      },
      "delete": {
        "summary": "Удалить категорию",
        "tags": ["Категории"],
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }],
        "responses": {
          "200": { "description": "Категория удалена" },
          "404": { "description": "Категория не найдена" }
        }
      }
    },

    "/brands": {
      "get": {
        "summary": "Получить все бренды",
        "tags": ["Бренды"],
        "responses": {
          "200": {
            "description": "Список брендов",
            "content": { "application/json": { "schema": { "type": "array", "items": { "$ref": "#/components/schemas/Brand" } } } }
          }
        }
      },
      "post": {
        "summary": "Создать бренд",
        "tags": ["Бренды"],
        "requestBody": {
          "required": true,
          "content": { "application/json": { "schema": { "$ref": "#/components/schemas/BrandCreate" } } }
        },
        "responses": { "201": { "description": "Бренд создан" } }
      }
    },

    "/products": {
      "get": {
        "summary": "Список продуктов с фильтрами и сортировкой",
        "tags": ["Продукты"],
        "parameters": [
          { "name": "category_id", "in": "query", "schema": { "type": "integer" }, "description": "Фильтр по категории" },
          { "name": "brand_id", "in": "query", "schema": { "type": "integer" }, "description": "Фильтр по бренду" },
          { "name": "min_price", "in": "query", "schema": { "type": "number" }, "description": "Мин. цена" },
          { "name": "max_price", "in": "query", "schema": { "type": "number" }, "description": "Макс. цена" },
          {
            "name": "gender",
            "in": "query",
            "schema": { "type": "string", "enum": ["Мужской", "Женский", "Детский"] },
            "description": "Пол"
          },
          {
            "name": "sort",
            "in": "query",
            "schema": { "type": "string", "enum": ["price_asc", "price_desc", "rating"] },
            "description": "Сортировка"
          }
        ],
        "responses": {
          "200": {
            "description": "Список продуктов",
            "content": { "application/json": { "schema": { "type": "array", "items": { "$ref": "#/components/schemas/Product" } } } }
          }
        }
      },
      "post": {
        "summary": "Создать продукт",
        "tags": ["Продукты"],
        "requestBody": {
          "required": true,
          "content": { "application/json": { "schema": { "$ref": "#/components/schemas/ProductCreate" } } }
        },
        "responses": { "201": { "description": "Продукт создан" }, "400": { "description": "Неверные данные" } }
      }
    },
    "/products/{id}": {
      "get": {
        "summary": "Получить продукт по ID",
        "tags": ["Продукты"],
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }],
        "responses": {
          "200": { "description": "Продукт", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Product" } } } },
          "404": { "description": "Товар не найден" }
        }
      },
      "put": {
        "summary": "Обновить продукт",
        "tags": ["Продукты"],
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }],
        "requestBody": {
          "required": true,
          "content": { "application/json": { "schema": { "$ref": "#/components/schemas/ProductUpdate" } } }
        },
        "responses": {
          "200": { "description": "Продукт обновлён" },
          "404": { "description": "Товар не найден" }
        }
      },
      "delete": {
        "summary": "Удалить продукт",
        "tags": ["Продукты"],
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }],
        "responses": {
          "200": { "description": "Продукт удалён" },
          "404": { "description": "Товар не найден" }
        }
      }
    },
    "/products/category/{categoryId}": {
      "get": {
        "summary": "Получить продукты по категории",
        "tags": ["Продукты"],
        "parameters": [{ "name": "categoryId", "in": "path", "required": true, "schema": { "type": "integer" } }],
        "responses": {
          "200": { "description": "Список продуктов по категории", "content": { "application/json": { "schema": { "type": "array", "items": { "$ref": "#/components/schemas/Product" } } } } },
          "404": { "description": "Категория не найдена" }
        }
      }
    },

    "/products/{id}/reviews": {
      "get": {
        "summary": "Отзывы по продукту",
        "tags": ["Отзывы"],
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }],
        "responses": {
          "200": {
            "description": "Список отзывов",
            "content": { "application/json": { "schema": { "type": "array", "items": { "$ref": "#/components/schemas/Review" } } } }
          }
        }
      },
      "post": {
        "summary": "Добавить отзыв к продукту",
        "tags": ["Отзывы"],
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }],
        "requestBody": {
          "required": true,
          "content": { "application/json": { "schema": { "$ref": "#/components/schemas/ReviewCreate" } } }
        },
        "responses": { "201": { "description": "Отзыв создан" }, "400": { "description": "Неверные данные" } }
      }
    },

    "/users": {
      "get": {
        "summary": "Все пользователи (без паролей)",
        "tags": ["Пользователи"],
        "responses": {
          "200": {
            "description": "Список пользователей",
            "content": { "application/json": { "schema": { "type": "array", "items": { "$ref": "#/components/schemas/UserPublic" } } } }
          }
        }
      },
      "post": {
        "summary": "Создать пользователя",
        "tags": ["Пользователи"],
        "requestBody": {
          "required": true,
          "content": { "application/json": { "schema": { "$ref": "#/components/schemas/UserCreate" } } }
        },
        "responses": { "201": { "description": "Пользователь создан" }, "400": { "description": "Неверные данные" } }
      }
    },
    "/users/{id}": {
      "get": {
        "summary": "Профиль пользователя",
        "tags": ["Пользователи"],
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }],
        "responses": {
          "200": { "description": "Пользователь", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/UserPublic" } } } },
          "404": { "description": "Пользователь не найден" }
        }
      }
    },

    "/sellers": {
      "get": {
        "summary": "Все продавцы",
        "tags": ["Продавцы"],
        "responses": {
          "200": {
            "description": "Список продавцов",
            "content": { "application/json": { "schema": { "type": "array", "items": { "$ref": "#/components/schemas/SellerPublic" } } } }
          }
        }
      },
      "post": {
        "summary": "Создать продавца",
        "tags": ["Продавцы"],
        "requestBody": {
          "required": true,
          "content": { "application/json": { "schema": { "$ref": "#/components/schemas/SellerCreate" } } }
        },
        "responses": { "201": { "description": "Продавец создан" } }
      }
    },
    "/sellers/{id}": {
      "get": {
        "summary": "Продавец по ID",
        "tags": ["Продавцы"],
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }],
        "responses": {
          "200": { "description": "Продавец", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/SellerPublic" } } } },
          "404": { "description": "Продавец не найден" }
        }
      }
    },

    "/users/{id}/cart": {
      "get": {
        "summary": "Получить корзину пользователя",
        "tags": ["Корзина"],
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }],
        "responses": {
          "200": {
            "description": "Позиции корзины",
            "content": { "application/json": { "schema": { "type": "array", "items": { "$ref": "#/components/schemas/CartItem" } } } }
          }
        }
      },
      "post": {
        "summary": "Добавить позицию в корзину",
        "tags": ["Корзина"],
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }],
        "requestBody": {
          "required": true,
          "content": { "application/json": { "schema": { "$ref": "#/components/schemas/CartItemCreate" } } }
        },
        "responses": { "201": { "description": "Добавлено в корзину" } }
      }
    },

    "/users/{id}/orders": {
      "get": {
        "summary": "Все заказы пользователя",
        "tags": ["Заказы"],
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }],
        "responses": {
          "200": {
            "description": "Список заказов",
            "content": { "application/json": { "schema": { "type": "array", "items": { "$ref": "#/components/schemas/Order" } } } }
          }
        }
      },
      "post": {
        "summary": "Создать заказ из позиций (перечень items)",
        "tags": ["Заказы"],
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["items"],
                "properties": {
                  "items": {
                    "type": "array",
                    "items": { "$ref": "#/components/schemas/OrderItemCreate" }
                  }
                }
              }
            }
          }
        },
        "responses": { "201": { "description": "Заказ создан" }, "400": { "description": "Неверные данные" } }
      }
    }
  },

  "components": {
    "schemas": {
      "Category": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "name": { "type": "string" },
          "parent_id": { "type": "integer", "nullable": true }
        },
        "required": ["id", "name"]
      },
      "CategoryCreate": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "parent_id": { "type": "integer", "nullable": true }
        },
        "required": ["name"]
      },

      "Brand": {
        "type": "object",
        "properties": { "id": { "type": "integer" }, "name": { "type": "string" } }
      },
      "BrandCreate": {
        "type": "object",
        "properties": { "name": { "type": "string" } },
        "required": ["name"]
      },

      "Product": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "category_id": { "type": "integer" },
          "brand_id": { "type": "integer", "nullable": true },
          "seller_id": { "type": "integer", "nullable": true },
          "name": { "type": "string" },
          "price": { "type": "number" },
          "discount": { "type": "integer", "default": 0 },
          "stock": { "type": "integer", "default": 0 },
          "image_url": { "type": "string", "nullable": true },
          "reviews": { "type": "integer", "default": 0 },
          "overallRating": { "type": "number", "default": 0 },
          "colors": { "type": "array", "items": { "type": "string" } },
          "sizes": { "type": "array", "items": { "type": "string" } },
          "gender": { "type": "string", "enum": ["Мужской", "Женский", "Детский"], "nullable": true },
          "brand_name": { "type": "string", "nullable": true },
          "category_name": { "type": "string", "nullable": true }
        }
      },
      "ProductCreate": {
        "type": "object",
        "properties": {
          "category_id": { "type": "integer" },
          "brand_id": { "type": "integer" },
          "seller_id": { "type": "integer" },
          "name": { "type": "string" },
          "price": { "type": "number" },
          "discount": { "type": "integer", "default": 0 },
          "stock": { "type": "integer", "default": 0 },
          "image_url": { "type": "string" },
          "colors": { "type": "array", "items": { "type": "string" } },
          "sizes": { "type": "array", "items": { "type": "string" } },
          "gender": { "type": "string", "enum": ["Мужской", "Женский", "Детский"] }
        },
        "required": ["name", "price", "category_id"]
      },
      "ProductUpdate": {
        "type": "object",
        "properties": {
          "category_id": { "type": "integer" },
          "brand_id": { "type": "integer" },
          "seller_id": { "type": "integer" },
          "name": { "type": "string" },
          "price": { "type": "number" },
          "discount": { "type": "integer" },
          "stock": { "type": "integer" },
          "image_url": { "type": "string" },
          "colors": { "type": "array", "items": { "type": "string" } },
          "sizes": { "type": "array", "items": { "type": "string" } },
          "gender": { "type": "string", "enum": ["Мужской", "Женский", "Детский"] }
        }
      },

      "Review": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "user_id": { "type": "integer" },
          "product_id": { "type": "integer" },
          "rating": { "type": "integer", "minimum": 1, "maximum": 5 },
          "comment": { "type": "string", "nullable": true },
          "created_at": { "type": "string", "format": "date-time" },
          "user": { "type": "string", "description": "Имя пользователя (join)" }
        }
      },
      "ReviewCreate": {
        "type": "object",
        "properties": {
          "user_id": { "type": "integer" },
          "rating": { "type": "integer", "minimum": 1, "maximum": 5 },
          "comment": { "type": "string" }
        },
        "required": ["user_id", "rating"]
      },

      "UserPublic": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "name": { "type": "string" },
          "email": { "type": "string" },
          "address": { "type": "string", "nullable": true },
          "phone": { "type": "string", "nullable": true }
        }
      },
      "UserCreate": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "email": { "type": "string" },
          "password": { "type": "string" },
          "address": { "type": "string" },
          "phone": { "type": "string" }
        },
        "required": ["name", "email", "password"]
      },

      "SellerPublic": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "name": { "type": "string" },
          "email": { "type": "string" },
          "store_name": { "type": "string", "nullable": true },
          "rating": { "type": "number" }
        }
      },
      "SellerCreate": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "email": { "type": "string" },
          "password": { "type": "string" },
          "store_name": { "type": "string" }
        },
        "required": ["name", "email", "password"]
      },

      "CartItem": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "user_id": { "type": "integer" },
          "product_id": { "type": "integer" },
          "quantity": { "type": "integer" },
          "name": { "type": "string", "description": "JOIN products.name", "nullable": true },
          "price": { "type": "number", "description": "JOIN products.price", "nullable": true }
        }
      },
      "CartItemCreate": {
        "type": "object",
        "properties": {
          "product_id": { "type": "integer" },
          "quantity": { "type": "integer", "default": 1 }
        },
        "required": ["product_id"]
      },

      "Order": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "user_id": { "type": "integer" },
          "total": { "type": "number" },
          "status": { "type": "string", "example": "pending" },
          "created_at": { "type": "string", "format": "date-time" }
        }
      },
      "OrderItem": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "order_id": { "type": "integer" },
          "product_id": { "type": "integer" },
          "quantity": { "type": "integer" },
          "price": { "type": "number" }
        }
      },
      "OrderItemCreate": {
        "type": "object",
        "properties": {
          "product_id": { "type": "integer" },
          "quantity": { "type": "integer" },
          "price": { "type": "number" }
        },
        "required": ["product_id", "quantity", "price"]
      }
    }
  }
}